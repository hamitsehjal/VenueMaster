@model IEnumerable<HS2231A1.Models.VenueBaseViewModel>

@{
    ViewBag.Title = "Venues";
}

<h2>Our Venues</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone) / 
            @Html.DisplayNameFor(model => model.Fax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email) /
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th>
            @Html.DisplayName("Date Opened")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Company)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
            @Html.DisplayFor(modelItem => item.City) @Html.DisplayFor(modelItem => item.State)
            @Html.DisplayFor(modelItem => item.Country) @Html.DisplayFor(modelItem => item.PostalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
            @Html.DisplayFor(modelItem => item.Fax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
            @Html.DisplayFor(modelItem => item.Website)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpenDate)
            <i>@Html.DisplayFor(modelItem => item.YearsOld)</i>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VenueId }) | @Html.ActionLink("Details", "Details", new { id=item.VenueId }) | @Html.ActionLink("Delete", "Delete", new { id=item.VenueId })
        </td>
    </tr>
}

</table>
